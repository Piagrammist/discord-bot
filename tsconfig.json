{
    "compilerOptions": {
        "strict": true,
        "target": "ES2022",
        "module": "Node16",
        "rootDir": "src",
        "outDir": "dist",
        // "sourceMap": true,       // Enable for debugging typescript
        // "removeComments": true,
        "noEmit": true,             // Disable for `production` mode
        "newLine": "lf",
        "noEmitOnError": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true
    }
}
